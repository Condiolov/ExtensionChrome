{
  "manifest_version": 3,
  "name": "FalaTexto",
  "version": "1.0",
  "description": "Extens√£o para falar o Texto",
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting",
    "nativeMessaging",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}