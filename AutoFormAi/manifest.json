{
  "manifest_version": 3,
  "name": "Site Title Fetcher",
  "version": "1.0",
  "description": "Obtém o título do site atual.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
